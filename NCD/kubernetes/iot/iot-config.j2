apiVersion: extensions/v1beta1
kind: Deployment
metadata:
    name: iot-config
    namespace: iot-{{ ENV }}
spec:
    replicas: 1
    revisionHistoryLimit: 3
    selector:
      matchLabels:
        app: iot-config
        tier: backend
        env: {{ ENV }}
        release: k8s-release
    template:
      metadata:
        labels:
          app: iot-config
          tier: backend
          env: {{ ENV }}
          release: k8s-release
      spec:
          containers:
          - name: iot-config
            image: reg.ops.com/iot-{{ ENV }}/iot-config:{{ TIMESTAMP }}
            imagePullPolicy: IfNotPresent
            args: ["{{ ENV }}"]
            resources:
              requests:
                memory: "1024Mi"
                cpu: "500m"
              limits:
                memory: "2048Mi"
                cpu: "1000m"
            ports:
            - name: iot-config
              containerPort: 8084

---
apiVersion: v1
kind: Service
metadata:
  name: iot-config-service
  namespace: iot-{{ ENV }}
spec:
  selector:
    app: iot-config
    tier: backend
    env: {{ ENV }}
    release: k8s-release
  ports:
  - port: 8084
    targetPort: 8084

---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: iot-config
  namespace: iot-{{ ENV }}
spec:
  rules:
  - host: iot-config.{{ ENV }}.sysadmin.com
    http:
      paths:
      - path: /
        backend:
          serviceName: iot-config-service
          servicePort: 8084
