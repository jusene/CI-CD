apiVersion: extensions/v1beta1
kind: Deployment
metadata:
    name: ai-lab-vmmanage
    namespace: aicloud-{{ ENV }}
spec:
    {% if ENV == "prod" %}
    replicas: 1
    minReadySeconds: 60
    {% else %}
    replicas: 1
    {% endif %}
    revisionHistoryLimit: 3
    selector:
      matchLabels:
        app: ai-lab-vmmanage
        env: {{ ENV }}
        tier: backend
        release: k8s-release
    template:
      metadata:
        labels:
          app: ai-lab-vmmanage
          env: {{ ENV }}
          tier: backend
          release: k8s-release
      spec:
          hostAliases:
          {% if ENV == 'dev' %}
          - ip: "192.168.66.121"
            hostnames:
            - "ddpva"
          - ip: "192.168.66.122"
            hostnames:
            - "ddpvb"
          - ip: "192.168.66.123"
            hostnames:
            - "ddpvc"
          - ip: "192.168.66.124"
            hostnames:
            - "ddpvd"
          - ip: "192.168.66.125"
            hostnames:
            - "ddpve"
          {% elif ENV == 'prod' %}
          - ip: "192.168.66.191"
            hostnames:
            - "ddrvk"
          - ip: "192.168.66.192"
            hostnames:
            - "ddrvl"
          - ip: "192.168.66.193"
            hostnames:
            - "ddrvm"
          - ip: "192.168.66.194"
            hostnames:
            - "ddrvn"
          - ip: "192.168.66.195"
            hostnames:
            - "ddrvo"
          {% else %}
          - ip: "127.0.0.1"
            hostnames:
            - "localhost"
          {% endif %}
          {% if ENV == "prod" %}
          imagePullSecrets:
          - name: regsecret
          {% endif %}
          containers:
          - name: ai-lab-vmmanage
            {% if ENV == "prod" %}
            image: reg.k8s.com/aicloud-{{ ENV }}/ai-lab-vmmanage:{{ TIMESTAMP }}
            {% else %}
            image: reg.ops.com/aicloud-{{ ENV }}/ai-lab-vmmanage:{{ TIMESTAMP }}
            {% endif %}
            imagePullPolicy: IfNotPresent
            args: ["{{ ENV }}"]
            resources:
              requests:
                memory: "1024Mi"
                cpu: "500m"
              limits:
                memory: "2048Mi"
                cpu: "1000m"
            ports:
            - name: vmmanage
              containerPort: 9912
            env:
            - name: HOST_NAME
              valueFrom:
                fieldRef:
                  fieldPath: spec.nodeName
            

---
apiVersion: v1
kind: Service
metadata:
  name: ai-vmmanage-service
  namespace: aicloud-{{ ENV }}
spec:
  selector:
    app: ai-lab-vmmanage
    tier: backend
    env: {{ ENV }}
    release: k8s-release
  ports:
  - port: 9912
    targetPort: 9912

---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: ai-lab-vmmanage
  namespace: aicloud-{{ ENV }}
 
spec:

  rules:
  - host: ai-lab-vmmanage.{{ ENV }}.sysadmin.com
    http:
      paths:
      - path: /
        backend:
          serviceName: ai-vmmanage-service
          servicePort: 9912


