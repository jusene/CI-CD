apiVersion: extensions/v1beta1
kind: Deployment
metadata:
    name: huayun-common-config
    namespace: bigdata-{{ ENV }}
spec:
    replicas: 1
    revisionHistoryLimit: 3
    selector:
      matchLabels:
        app: huayun-common-config
        env: {{ ENV }}
        tier: backend
        release: k8s-release
    template:
      metadata:
        labels:
          app: huayun-common-config
          env: {{ ENV }}
          tier: backend
          release: k8s-release
      spec:
          {% if ENV == "prod" %}
          imagePullSecrets:
          - name: regsecret
          {% endif %}
          containers:
          - name: huayun-common-config
            {% if ENV == "prod" %}
            image: reg.k8s.com/bigdata-{{ ENV }}/huayun-common-config:{{ TIMESTAMP }}
            {% else %}
            image: reg.ops.com/bigdata-{{ ENV }}/huayun-common-config:{{ TIMESTAMP }}
            {% endif %}
            imagePullPolicy: IfNotPresent
            args: ["{{ ENV }}"]
            resources:
              {% if ENV == 'prod' %}
              requests:
                memory: "1024Mi"
                cpu: "1024m"
              limits:
                memory: "2048Mi"
                cpu: "2048m"
              {% else %}
              requests:
                memory: "1024Mi"
                cpu: "512m"
              limits:
                memory: "2048Mi"
                cpu: "1024m"
              {% endif %}
            ports:
            - name: common-config
              containerPort: 5555
            

---
apiVersion: v1
kind: Service
metadata:
  name: config-service
  namespace: bigdata-{{ ENV }}
spec:
  selector:
    app: huayun-common-config
    tier: backend
    env: {{ ENV }}
    release: k8s-release
  ports:
  - port: 5555
    targetPort: 5555

---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: huayun-common-config
  namespace: bigdata-{{ ENV }}
spec:
  rules:
  - host: huayun-common-config.{{ ENV }}.sysadmin.com
    http:
      paths:
      - path: /
        backend:
          serviceName: config-service
          servicePort: 5555
