apiVersion: extensions/v1beta1
kind: Deployment
metadata:
    name: huayun-lab-service-report
    namespace: bigdata-{{ ENV }}
spec:
    {% if ENV == "prod" %}
    replicas: 1
    minReadySeconds: 60
    {% else %}
    replicas: 1
    {% endif %}
    revisionHistoryLimit: 3
    selector:
      matchLabels:
        app: huayun-lab-service-report
        env: {{ ENV }}
        tier: backend
        release: k8s-release
    template:
      metadata:
        labels:
          app: huayun-lab-service-report
          env: {{ ENV }}
          tier: backend
          release: k8s-release
      spec:
          {% if ENV == "prod" %}
          imagePullSecrets:
          - name: regsecret
          {% endif %}
          containers:
          - name: huayun-lab-service-report
            {% if ENV == "prod" %}
            image: reg.k8s.com/bigdata-{{ ENV }}/huayun-lab-service-report:{{ TIMESTAMP }}
            {% else %}
            image: reg.ops.com/bigdata-{{ ENV }}/huayun-lab-service-report:{{ TIMESTAMP }}
            {% endif %}
            imagePullPolicy: IfNotPresent
            args: ["{{ ENV }}"]
            resources:
              requests:
                memory: "1024Mi"
                cpu: "500m"
              limits:
                memory: "2048Mi"
                cpu: "1000m"
            ports:
            - name: service-report
              containerPort: 8806
            

---
apiVersion: v1
kind: Service
metadata:
  name: report-service
  namespace: bigdata-{{ ENV }}
spec:
  selector:
    app: huayun-lab-service-report
    tier: backend
    env: {{ ENV }}
    release: k8s-release
  ports:
  - port: 8806
    targetPort: 8806

---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: huayun-lab-service-report
  namespace: bigdata-{{ ENV }}
  
spec:

  rules:
  - host: huayun-lab-service-report.{{ ENV }}.sysadmin.com
    http:
      paths:
      - path: /
        backend:
          serviceName: report-service
          servicePort: 8806


