apiVersion: extensions/v1beta1
kind: Deployment
metadata:
    name: huayun-common-zuul
    namespace: bigdata-{{ ENV }}
spec:
    {% if ENV == "prod" %}
    replicas: 2
    minReadySeconds: 60
    {% else %}
    replicas: 1
    {% endif %}
    revisionHistoryLimit: 3
    selector:
      matchLabels:
        app: huayun-common-zuul
        env: {{ ENV }}
        tier: backend
        release: k8s-release
    template:
      metadata:
        labels:
          app: huayun-common-zuul
          env: {{ ENV }}
          tier: backend
          release: k8s-release
      spec:
          {% if ENV == "prod" %}
          imagePullSecrets:
          - name: regsecret
          {% endif %}
          containers:
          - name: huayun-common-zuul
            {% if ENV == "prod" %}
            image: reg.k8s.com/bigdata-{{ ENV }}/huayun-common-zuul:{{ TIMESTAMP }}
            {% else %}
            image: reg.ops.com/bigdata-{{ ENV }}/huayun-common-zuul:{{ TIMESTAMP }}
            {% endif %}
            imagePullPolicy: IfNotPresent
            args: ["{{ ENV }}"]
            resources:
              requests:
                memory: "2048Mi"
                cpu: "1024m"
              limits:
                memory: "4096Mi"
                cpu: "2048m"
            ports:
            - name: common-zuul
              containerPort: 7770
            

---
apiVersion: v1
kind: Service
metadata:
  name: zuul-service
  namespace: bigdata-{{ ENV }}
spec:
  selector:
    app: huayun-common-zuul
    tier: backend
    env: {{ ENV }}
    release: k8s-release
  ports:
  - port: 7770
    targetPort: 7770

---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: huayun-common-zuul
  namespace: bigdata-{{ ENV }}
  annotations:
    nginx.ingress.kubernetes.io/proxy-body-size: "1024m"
    nginx.ingress.kubernetes.io/proxy-send-timeout: "300"
    nginx.ingress.kubernetes.io/proxy-read-timeout: "300"
    nginx.ingress.kubernetes.io/proxy-buffering: "on"
    nginx.ingress.kubernetes.io/proxy-buffers-number: "4"
    nginx.ingress.kubernetes.io/proxy-buffer-size: "32k"
spec:
  {% if ENV == "prod" %}
  tls:
  - hosts:
    - di-gw.zj-huawei.com
    secretName: zj-huawei-ingress-tls-secret
  {% endif %}

  rules:
  - host: huayun-common-zuul.{{ ENV }}.sysadmin.com
    http:
      paths:
      - path: /
        backend:
          serviceName: zuul-service
          servicePort: 7770

  {% if ENV == "prod" %}
  - host: di-gw.zj-huawei.com
    http: 
      paths: 
      - path: /
        backend:
          serviceName: zuul-service
          servicePort: 7770
  {% endif %}
