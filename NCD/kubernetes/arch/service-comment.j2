apiVersion: extensions/v1beta1
kind: Deployment
metadata:
    name: service-comment
    namespace: arch-{{ ENV }}
spec:
    {% if ENV == "prod" %}
    replicas: 1
    minReadySeconds: 60
    {% else %}
    replicas: 1
    {% endif %}
    revisionHistoryLimit: 3
    selector:
      matchLabels:
        app: service-comment
        tier: backend
        env: {{ ENV }}
        release: k8s-release
    template:
      metadata:
        labels:
          app: service-comment
          tier: backend
          env: {{ ENV }}
          release: k8s-release
      spec:
          {% if ENV == "prod" %}
          imagePullSecrets:
          - name: regsecret
          {% endif %}
          containers:
          - name: service-comment
            {% if ENV == "prod" %}
            image: reg.k8s.com/arch-{{ ENV }}/service-comment:{{ TIMESTAMP }}
            {% else %}
            image: reg.ops.com/arch-{{ ENV }}/service-comment:{{ TIMESTAMP }}
            {% endif %}
            imagePullPolicy: IfNotPresent
            args: ["{{ ENV }}"]
            resources:
              {% if ENV == 'prod' %}
              requests:
                memory: "1024Mi"
                cpu: "1024m"
              limits:
                memory: "2048Mi"
                cpu: "2048m"
              {% else %}
              requests:
                memory: "1024Mi"
                cpu: "512m"
              limits:
                memory: "2048Mi"
                cpu: "1024m"
              {% endif %}
            ports:
            - name: service-comment
              containerPort: 8813
            {% if ENV == "test" %}
            - name: debug-test
              containerPort: 28813
            {% elif ENV == "dev" %}
            - name: debug-dev
              containerPort: 18813
            {% else %}
            
            {% endif %}

---
apiVersion: v1
kind: Service
metadata:
  name: comment-service
  namespace: arch-{{ ENV }}
spec:
  selector:
    app: service-comment
    tier: backend
    env: {{ ENV }}
    release: k8s-release
  ports:
  - name: service-comment
    port: 8813
    targetPort: 8813
  {% if ENV == "test" %}
  - name: debug-test
    port: 28813
    targetPort: 28813
  {% elif ENV == "dev" %}
  - name: debug-dev
    port: 18813
    targetPort: 18813
  {% else %}
  
  {% endif %}

---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: service-comment
  namespace: arch-{{ ENV }}
spec:
  rules:
  - host: service-comment.{{ ENV }}.sysadmin.com
    http:
      paths:
      - path: /
        backend:
          serviceName: comment-service
          servicePort: 8813


