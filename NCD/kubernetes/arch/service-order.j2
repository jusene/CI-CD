apiVersion: extensions/v1beta1
kind: Deployment
metadata:
    name: service-order
    namespace: arch-{{ ENV }}
spec:
    {% if ENV == "prod" %}
    replicas: 2
    minReadySeconds: 60
    {% else %}
    replicas: 1
    {% endif %}
    revisionHistoryLimit: 3
    selector:
      matchLabels:
        app: service-order
        tier: backend
        env: {{ ENV }}
        release: k8s-release
    template:
      metadata:
        labels:
          app: service-order
          tier: backend
          env: {{ ENV }}
          release: k8s-release
      spec:
          {% if ENV == "prod" %}
          imagePullSecrets:
          - name: regsecret
          {% endif %}
          containers:
          - name: service-order
            {% if ENV == "prod" %}
            image: reg.k8s.com/arch-{{ ENV }}/service-order:{{ TIMESTAMP }}
            {% else %}
            image: reg.ops.com/arch-{{ ENV }}/service-order:{{ TIMESTAMP }}
            {% endif %}
            imagePullPolicy: IfNotPresent
            args: ["{{ ENV }}"]
            resources:
              {% if ENV == 'prod' %}
              requests:
                memory: "1024Mi"
                cpu: "1024m"
              limits:
                memory: "2048Mi"
                cpu: "2048m"
              {% else %}
              requests:
                memory: "1024Mi"
                cpu: "512m"
              limits:
                memory: "2048Mi"
                cpu: "1024m"
              {% endif %}
            ports:
            - name: service-order
              containerPort: 8807
            {% if ENV == "test" %}
            - name: debug-test
              containerPort: 28807
            {% elif ENV == "dev" %}
            - name: debug-dev
              containerPort: 18807
            {% else %}
            
            {% endif %}
            
                

---
apiVersion: v1
kind: Service
metadata:
  name: order-service
  namespace: arch-{{ ENV }}
spec:
  selector:
    app: service-order
    tier: backend
    env: {{ ENV }}
    release: k8s-release
  ports:
  - name: service-order
    port: 8807
    targetPort: 8807
  {% if ENV == "test" %}
  - name: debug-test
    port: 28807
    targetPort: 28807
  {% elif ENV == "dev" %}
  - name: debug-dev
    port: 18807
    targetPort: 18807
  {% else %}
  
  {% endif %}

---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: service-order
  namespace: arch-{{ ENV }}
spec:
  rules:
  - host: service-order.{{ ENV }}.sysadmin.com
    http:
      paths:
      - path: /
        backend:
          serviceName: order-service
          servicePort: 8807


