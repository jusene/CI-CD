apiVersion: extensions/v1beta1
kind: Deployment
metadata:
    name: service-evaluation
    namespace: arch-{{ ENV }}
spec:
    {% if ENV == "prod" %}
    replicas: 2
    minReadySeconds: 60
    {% else %}
    replicas: 1
    {% endif %}
    revisionHistoryLimit: 3
    selector:
      matchLabels:
        app: service-evaluation
        tier: backend
        env: {{ ENV }}
        release: k8s-release
    template:
      metadata:
        labels:
          app: service-evaluation
          tier: backend
          env: {{ ENV }}
          release: k8s-release
      spec:
          {% if ENV == "prod" %}
          imagePullSecrets:
          - name: regsecret
          {% endif %}
          containers:
          - name: service-evaluation
            {% if ENV == "prod" %}
            image: reg.k8s.com/arch-{{ ENV }}/service-evaluation:{{ TIMESTAMP }}
            {% else %}
            image: reg.ops.com/arch-{{ ENV }}/service-evaluation:{{ TIMESTAMP }}
            {% endif %}
            imagePullPolicy: IfNotPresent
            args: ["{{ ENV }}"]
            resources:
              {% if ENV == 'prod' %}
              requests:
                memory: "2048Mi"
                cpu: "1024m"
              limits:
                memory: "4096Mi"
                cpu: "2048m"
              {% else %}
              requests:
                memory: "1024Mi"
                cpu: "512m"
              limits:
                memory: "2048Mi"
                cpu: "1024m"
              {% endif %}
            ports:
            - name: evaluation
              containerPort: 8807
            

---
apiVersion: v1
kind: Service
metadata:
  name: evaluation-service
  namespace: arch-{{ ENV }}
spec:
  selector:
    app: service-evaluation
    tier: backend
    env: {{ ENV }}
    release: k8s-release
  ports:
  - port: 8807
    targetPort: 8807

---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: service-evaluation
  namespace: arch-{{ ENV }}
spec:
  rules:
  - host: service-evaluation.{{ ENV }}.sysadmin.com
    http:
      paths:
      - path: /
        backend:
          serviceName: evaluation-service
          servicePort: 8807
