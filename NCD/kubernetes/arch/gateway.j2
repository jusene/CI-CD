apiVersion: extensions/v1beta1
kind: Deployment
metadata:
    name: gateway
    namespace: arch-{{ ENV }}
spec:
    {% if ENV == "prod" %}
    replicas: 2
    minReadySeconds: 60
    {% else %}
    replicas: 1
    {% endif %}
    revisionHistoryLimit: 3
    selector:
      matchLabels:
        app: gateway
        env: {{ ENV }}
        tier: backend
        release: k8s-release
    template:
      metadata:
        labels:
          app: gateway
          env: {{ ENV }}
          tier: backend
          release: k8s-release
      spec:
          {% if ENV == "prod" %}
          imagePullSecrets:
          - name: regsecret
          {% endif %}
          containers:
          - name: gateway
            {% if ENV == "prod" %}
            image: reg.k8s.com/arch-{{ ENV }}/gateway:{{ TIMESTAMP }}
            {% else %}
            image: reg.ops.com/arch-{{ ENV }}/gateway:{{ TIMESTAMP }}
            {% endif %}
            imagePullPolicy: IfNotPresent
            args: ["{{ ENV }}"]
            resources:
              {% if ENV == 'prod' %}
              requests:
                memory: "2048Mi"
                cpu: "1024m"
              limits:
                memory: "4096Mi"
                cpu: "2048m"
              {% else %}
              requests:
                memory: "2048Mi"
                cpu: "512m"
              limits:
                memory: "4096Mi"
                cpu: "1024m"
              {% endif %}
            ports:
            - name: gateway
              containerPort: 8097
            
---
apiVersion: v1
kind: Service
metadata:
  name: gateway-service
  namespace: arch-{{ ENV }}
spec:
  selector:
    app: gateway
    env: {{ ENV }}
    tier: backend
    release: k8s-release
  ports:
  - port: 8097
    targetPort: 8097

---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: gateway
  namespace: arch-{{ ENV }}
  annotations:
    nginx.ingress.kubernetes.io/proxy-body-size: "1024m"
    nginx.ingress.kubernetes.io/proxy-send-timeout: "300"
    nginx.ingress.kubernetes.io/proxy-read-timeout: "300"
    nginx.ingress.kubernetes.io/proxy-buffering: "on"
    nginx.ingress.kubernetes.io/proxy-buffers-number: "4"
    nginx.ingress.kubernetes.io/proxy-buffer-size: "32k"

spec:
  {% if ENV == "prod" %}
  tls:
  - hosts:
    - cp.zj-huawei.com
    - gw.zj-huawei.com
    secretName: zj-huawei-ingress-tls-secret
  {% endif %}

  {% if ENV == "dev" %}
  tls:
  - hosts:
    - cptest.zj-huawei.com
    secretName: zj-huawei-ingress-tls-secret
  {% endif %}

  rules:
  - host: gateway.{{ ENV }}.sysadmin.com
    http:
      paths:
      - path: /
        backend:
          serviceName: gateway-service
          servicePort: 8097
  
  {% if ENV == "dev" %}
  - host: cptest.zj-huawei.com
    http:
      paths:
      - path: /
        backend:
          serviceName: gateway-service
          servicePort: 8097
  {% endif %}

  {% if ENV == "test" %}
  - host: gw1.zj-huawei.com
    http:
      paths:
      - path: /
        backend:
          serviceName: gateway-service
          servicePort: 8097
  {% endif %}

  {% if ENV == "prod" %}
  - host: gw.zj-huawei.com
    http:
      paths:
      - path: /
        backend:
          serviceName: gateway-service
          servicePort: 8097
  
  - host: cp.zj-huawei.com
    http:
      paths:
      - path: /
        backend:
          serviceName: gateway-service
          servicePort: 8097
  {% endif %}
