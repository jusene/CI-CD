apiVersion: extensions/v1beta1
kind: Deployment
metadata:
    name: service-chat
    namespace: arch-{{ ENV }}
spec:
    {% if ENV == "prod" %}
    replicas: 1
    minReadySeconds: 60
    {% else %}
    replicas: 1
    {% endif %}
    revisionHistoryLimit: 3
    selector:
      matchLabels:
        app: service-chat
        tier: backend
        env: {{ ENV }}
        release: k8s-release
    template:
      metadata:
        labels:
          app: service-chat
          tier: backend
          env: {{ ENV }}
          release: k8s-release
      spec:
          {% if ENV == "prod" %}
          imagePullSecrets:
          - name: regsecret
          {% endif %}
          containers:
          - name: service-chat
            {% if ENV == "prod" %}
            image: reg.k8s.com/arch-{{ ENV }}/service-chat:{{ TIMESTAMP }}
            {% else %}
            image: reg.ops.com/arch-{{ ENV }}/service-chat:{{ TIMESTAMP }}
            {% endif %}
            imagePullPolicy: IfNotPresent
            args: ["{{ ENV }}"]
            resources:
              {% if ENV == 'prod' %}
              requests:
                memory: "1024Mi"
                cpu: "1024m"
              limits:
                memory: "2048Mi"
                cpu: "2048m"
              {% else %}
              requests:
                memory: "1024Mi"
                cpu: "512m"
              limits:
                memory: "2048Mi"
                cpu: "1024m"
              {% endif %}
            ports:
            - name: service-chat
              containerPort: 8812
            - name: ws
              containerPort: 6789
            {% if ENV == "test" %}
            - name: debug-test
              containerPort: 28812
            {% elif ENV == "dev" %}
            - name: debug-dev
              containerPort: 18812
            {% else %}
            
            {% endif %}

---
apiVersion: v1
kind: Service
metadata:
  name: chat-service
  namespace: arch-{{ ENV }}
spec:
  selector:
    app: service-chat
    tier: backend
    env: {{ ENV }}
    release: k8s-release
  ports:
  - name: service-chat
    port: 8812
    targetPort: 8812
  - name: ws
    port: 6789
    targetPort: 6789
  {% if ENV == "test" %}
  - name: debug-test
    port: 28812
    targetPort: 28812
  {% elif ENV == "dev" %}
  - name: debug-dev
    port: 18812
    targetPort: 18812
  {% else %}
  
  {% endif %}

---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: service-chat
  namespace: arch-{{ ENV }}
spec:
  rules:
  - host: service-chat.{{ ENV }}.sysadmin.com
    http:
      paths:
      - path: /
        backend:
          serviceName: chat-service
          servicePort: 8812

