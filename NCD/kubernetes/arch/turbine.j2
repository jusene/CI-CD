apiVersion: extensions/v1beta1
kind: Deployment
metadata:
    name: turbine
    namespace: arch-{{ ENV }}
spec:
    {% if ENV == "prod" %}
    replicas: 2
    minReadySeconds: 60
    {% else %}
    replicas: 1
    {% endif %}
    revisionHistoryLimit: 3
    selector:
      matchLabels:
        app: turbine
        tier: backend
        env: {{ ENV }}
        release: k8s-release
    template:
      metadata:
        labels:
          app: turbine
          tier: backend
          env: {{ ENV }}
          release: k8s-release
      spec:
          {% if ENV == "prod" %}
          imagePullSecrets:
          - name: regsecret
          {% endif %}
          containers:
          - name: turbine
            {% if ENV == "prod" %}
            image: reg.k8s.com/arch-{{ ENV }}/turbine:{{ TIMESTAMP }}
            {% else %}
            image: reg.ops.com/arch-{{ ENV }}/turbine:{{ TIMESTAMP }}
            {% endif %}
            imagePullPolicy: IfNotPresent
            args: ["{{ ENV }}"]
            resources:
              {% if ENV == 'prod' %}
              requests:
                memory: "1024Mi"
                cpu: "1024m"
              limits:
                memory: "2048Mi"
                cpu: "2048m"
              {% else %}
              requests:
                memory: "1024Mi"
                cpu: "512m"
              limits:
                memory: "2048Mi"
                cpu: "1024m"
              {% endif %}
            ports:
            - name: turbine
              containerPort: 8080
            
---
apiVersion: v1
kind: Service
metadata:
  name: turbine-service
  namespace: arch-{{ ENV }}
spec:
  selector:
    app: turbine
    tier: backend
    env: {{ ENV }}
    release: k8s-release
  ports:
  - port: 8080
    targetPort: 8080

---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: turbine
  namespace: arch-{{ ENV }}
spec:
  rules:
  - host: turbine.{{ ENV }}.sysadmin.com
    http:
      paths:
      - path: /
        backend:
          serviceName: turbine-service
          servicePort: 8080
